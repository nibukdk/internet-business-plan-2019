<!-- Display settings for flash messages -->
<div class="container">
  <div id="messages">
    <% Object.keys(messages).map( type => { %>
    <ul class="<%= type %>">
      <% messages[type].map( message => { %>
      <li
        class="alert alert-<%=type %> alert-dismissible fade show"
        role="alert"
      >
        <%= message %>
        <button
          type="button"
          class="close"
          data-dismiss="alert"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </li>

      <% }) %>
    </ul>
    <% }) %>
  </div>
  
</div>
