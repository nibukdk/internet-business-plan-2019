              <div class="tab-pane" id="messages">
                <h2></h2>
     
              </div>
              <!--/tab-pane-->
              <div class="tab-pane" id="settings">
                <hr />
                 <form class="form" action="client/profile/update/<%=userProfile.id%>" method="POST" id="registrationForm">
                    <div class="form-group">
                      <div class="col-xs-6">
                        <label for="image"><h4>Image</h4></label>
                        <input
                          type="text"
                          class="form-control"
                          name="image"
                          id="image"
                          placeholder="Enter Image Url"
                          title="Provide url address for image."
                        />
                      </div>
                    </div>
                    <div class="form-group">
                      <div class="col-xs-6">
                        <label for="address"><h4>Address</h4></label>
                        <input
                          type="text"
                          class="form-control"
                          name="address"
                          id="address"
                          placeholder="Address"
                          title="Provide Your Address "
                          
                        />
                      </div>
                    </div>
  
                     <div class="form-group">
                      <div class="col-xs-6">
                        <label for="hobbies"><h4>Hobbies</h4></label>
                        <textarea class="form-control" id="hobbies" rows="3" name="hobbies" title="Provide your hobbies" placeholder="for eg: Dancing, Yoga, Singing"></textarea>
                      </div>
                    </div>
  
                     
                    <div class="form-group">
                      <div class="col-xs-6">
                        <label for="birth_date"><h4>Birth Date</h4></label>
                        <input
                        type="date"
                        class="form-control"
                        id="birth_date"
                        title="Provide Your Birth Date"
                        name="birth_date"
                       
                      />
                      </div>
                    </div>
                   
                  
                  <div class="form-group">
                    <div class="col-xs-12">
                      <br />
                      <button class="btn btn-lg btn-success" type="submit">
                        <i class="glyphicon glyphicon-ok-sign"></i> Save
                      </button>
                      <button class="btn btn-lg" type="reset">
                        <i class="glyphicon glyphicon-repeat"></i> Reset
                      </button>
                    </div>
                  </div>
                </form>
              </div>
            </div>
            <!--/tab-pane-->
          </div>
          <!--/tab-content-->
        </div>
